<Window x:Class="HS.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HS.Wpf"
        xmlns:aro="clr-namespace:HS.Wpf.ARO.Views;assembly=HS.Wpf.ARO"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Aplikace">
                <MenuItem Header="Zálohovat databázi" Command="{Binding BackupDatabaseCommand}"/>
            </MenuItem>
        </Menu>
        <aro:MainView DataContext="{Binding DataContextConcrete}" Margin="10" />
    </DockPanel>
</Window>
