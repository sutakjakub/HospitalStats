<UserControl x:Class="HS.Wpf.Shared.Controls.BooleanComboBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HS.Wpf.Shared"
             xmlns:dt="clr-namespace:HS.Wpf.Shared.DesingTime"
             xmlns:sources="clr-namespace:HS.Wpf.Shared.Sources"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=dt:BooleanComboBoxItemDesingTime, IsDesignTimeCreatable=True}">
    <Grid>
        <ComboBox   ItemsSource="{x:Static sources:BooleanSource.Items}"
                    SelectedItem="{Binding DataContext}" 
                    SelectedValuePath="Value" 
                    DisplayMemberPath="Display" />
    </Grid>
</UserControl>
