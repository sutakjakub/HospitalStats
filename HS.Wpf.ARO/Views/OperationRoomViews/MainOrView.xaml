<UserControl x:Class="HS.Wpf.ARO.Views.OperationRoomViews.MainOrView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HS.Wpf.ARO.Views.OperationRoomViews"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             x:Name="LayoutRoot">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HS.Wpf.Shared;component/Theme/Generics.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button fa:Awesome.Content="Plus" 
                    Foreground="Green" 
                    TextElement.FontSize="40" 
                    Width="40"
                    Height="40"
                    Style="{StaticResource TransparentButton}"
                    Command="{Binding AddCommand}" />
            <Button fa:Awesome.Content="Save" 
                    Foreground="Blue" 
                    TextElement.FontSize="40" 
                    Width="40"
                    Height="40"
                    Style="{StaticResource TransparentButton}"
                    Command="{Binding SaveCommand}"/>
            
            <Button fa:Awesome.Content="Refresh" Margin="40 0 0 0" 
                    Style="{StaticResource TransparentButton}"
                    Command="{Binding LoadDataCommand}"
                    TextElement.FontSize="40" 
                    Width="40"
                    Height="40" />
        </StackPanel>

        <local:CollectionActionsView Grid.Row="1" Grid.Column="0" DataContext="{Binding CollectionActions}" />
    </Grid>
</UserControl>
